<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
   
</head>

<body class="nav-style">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
        @Html.ActionLink("Deploy Tracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-link navbar-text">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                <li class="nav-link navbar-text">@Html.ActionLink("QA", "Index", "QA", new { area = "" }, null)</li>
                <li class="nav-link navbar-text">@Html.ActionLink("Developer", "Index", "Developer", new { area = "" }, null)</li>
                <li class="nav-link navbar-text">@Html.ActionLink("Change Logs", "Index", "ChangeLogs", new { area = "" }, null)</li>
                <li class="nav-link navbar-text">@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
            </ul>
            <span class="nav-link navbar-text">@Html.ActionLink("New Deploy", "Index", "NewDeploy", new { area = "" }, null)</span>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bethesda.net Deploy Tracker</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/toastr")
    @RenderSection("scripts", required: false)
    
</body>
</html>
